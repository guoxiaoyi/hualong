<div class="signin-wrap">
  <div class="container">
    <%= simple_form_for @manager, url: admin_create_session_path, html: {class: "form-signin"} do |f| %>
      <h2 class="form-signin-heading">管理员登录</h2>
      <%= text_field_tag :auth_key, "", class: 'form-control', placeholder: 'Email address', required: true, autofocus: true %>
      <%= password_field_tag :password, "", class: 'form-control', placeholder: 'Password', required: true %>
      <label class="checkbox">
        <input type="checkbox" value="remember-me"> 记住密码
      </label>
      <%= submit_tag t("buttons.sign_in"), class: 'btn btn-lg btn-primary btn-block' %>
    <% end %>

  </div> <!-- /container -->
</div>
