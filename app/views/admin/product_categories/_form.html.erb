<%= simple_form_for([:admin, @product_category], wrapper: :bootstrap3) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :language, collection: ProductCategory.languages %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
