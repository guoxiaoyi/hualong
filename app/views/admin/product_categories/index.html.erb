<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th><%= ProductCategory.human_attribute_name(:name) %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @product_categories.each do |product_category| %>
      <tr>
        <td><%= product_category.name %></td>
        <td><%= link_to t('actions.show'), [:admin, product_category] %></td>
        <td><%= link_to t('actions.edit'), edit_admin_product_category_path(product_category) %></td>
        <td><%= link_to t('actions.destroy'), [:admin, product_category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t('actions.new')}#{ProductCategory.model_name.human}", new_admin_product_category_path, class: 'btn btn-default' %>
