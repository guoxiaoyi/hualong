<%= simple_form_for([:admin, @product], wrapper: :bootstrap3) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :en_name %>
    <%= f.input :jp_name %>
    <%= f.input :ko_name %>
    <%= f.file_field :image_path %>
    <%= f.input :product_category_id,collection: ProductCategory.all.pluck(:en_title,:id) %>
    <%= f.input :summary %>
    <%= f.input :video %>
    <%= f.input :cid %>
    <%= f.input :inquiry %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
