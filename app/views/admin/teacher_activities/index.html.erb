<table class="table table-hover">
  <thead>
    <tr>
      <th>活动名称</th>
      <th>人数(当前人数/最大人数)</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @activities.each do |activity|%>
    <tr>
      <td><%= activity.title%></td>
      <td><%= activity.teacher_activities.count%>/<%= activity.teacher_limit%></td>
      <td><%= link_to "显示", admin_teacher_activity_path(activity) %></td>
    </tr>
    <% end -%>
  </tbody>
</table>