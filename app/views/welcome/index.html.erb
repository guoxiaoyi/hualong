<div class="container">
  <div class="banner">
  <%= image_tag "banner.jpg"%>
  </div>
</div>
<div class="container public">
  <div class="index_right">
    <div class="col-lg-12">
      <div class="index_title">
        <a href="#"><span>高端视点</span></a>
        <em class="r-m">
          <em class="add">+</em>
          <%= link_to "更多", article_category_articles_path(:see) %>
        </em>
      </div>
      <div class="pic_text">
        <div class="pic_img"><%= image_tag "0423.jpg"%></div>
        <div>
          <ul class="pic_img_right">
          <% if !@see.list.blank? %>
          <% @see.list.limit(5).each do |l|%>
            <li>
              <%= link_to l.title.truncate(18), article_path(l) %>
            </li>
          <% end -%>
          <% else %>
            <li><a href="#">还没有内容</a></li>
          <% end -%>
          </ul>
        </div>
      </div>
      <div class="clr"></div>
      <br>
      <div class="index_title">
        <%= link_to "<span>学术委员会</span>".html_safe, page_path(:learning) %>
      </div>
      <div class="index_right_text">
        <%= strip_tags(@learning).truncate(200)%>
      </div>
      <br>
      <div class="index_title">
        <%= link_to "<span>企业委员会</span>".html_safe, page_path(:enterprise) %>
      </div>
      <div class="index_right_text">
        <%= strip_tags(@enterprise).truncate(200)%>
      </div>
    </div>
  </div>
  <div class="index_left">
    <div class="col-lg-6 pull-right">
      <div class="panel pull-right">
       <%= pannel_list(@news) %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="panel">
       <%= pannel_list(@work) %>
      </div>
    </div>
    <div class="clr"></div>
    <%= image_tag "mh1.jpg", width: "100%", class: "im" %>
    <div class="col-lg-6 pull-right">
      <div class="panel pull-right">
       <%= pannel_list(@bbs) %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="panel">
       <%= pannel_list(@study) %>
      </div>
    </div>
    <div class="clr"></div>
  </div>
</div>
<div class="container">
  <ul class="index_img_list">
    <li><%= image_tag "1.jpg"%></li>
    <li><%= image_tag "5.jpg"%></li>
    <li><%= image_tag "2.jpg"%></li>
    <li><%= image_tag "3.jpg"%></li>
    <li><%= image_tag "4.jpg"%></li>
  </ul>
</div>
